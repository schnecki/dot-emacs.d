# name : property function for public field of R6 class
# key : prop
# expand-env: ((yas/indent-line 'fixed)\)
# --
${1:name} = function(value) {
    if (missing(value)) return(private\$.$1)
    if (!(${2:base::is.numeric(value)}${3: && base::length(value) == 1}))
        stop("ERROR: Unallowed property ", value, " for '$1' at ", getSrcFilename(function(){}), ":", getSrcLocation(function(){}))
    private\$.$1 <- value
    return(self)
}$0
