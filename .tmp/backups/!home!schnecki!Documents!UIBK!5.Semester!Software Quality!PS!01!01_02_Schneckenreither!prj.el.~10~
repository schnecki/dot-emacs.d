(jde-project-file-version "1.0")
(jde-set-variables)


;; get all classes from ./src

(let ((root (nth 0 (split-string default-directory "src"))))
  (setq src (replace-regexp-in-string " " "\\\\ " (expand-file-name root "src")))
  (setq subdirs (shell-command-to-string
                 (concat "find " src " -type d -print")))
  (add-to-list 'jde-compile-option-classpath subdirs)
  (setq jde-compile-option-directory (concat root "/classes"))
  ;; (setq jde-run-option-classpath (expand-file-name root "classes"))
  )


