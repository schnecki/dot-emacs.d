# .bashrc

# Source global definitions
if [ -f /etc/bashrc ]; then
    . /etc/bashrc
fi

# User specific aliases and functions


##############################################
########### PATH #############################
##############################################

# Add . to path
# PATH=$PATH:. # insecure with find and execdir

PATH=$PATH:$HOME/AndroidSDK:$HOME/AndroidSDK/tools:/usr/local/cuda-5.0/bin

# For SDK version r_08 and higher, also add this for adb:
PATH=$PATH:$HOME/AndroidSDK/platform-tools

PATH=$PATH:$HOME/bin

export PATH


##############################################
########### OpenCL extra stuff ###############
##############################################


export LIBOPENCL_LOC=/usr/lib64/nvidia-bumblebee/



OCL_ROOT=/usr/local/cuda-5.0/
export OCL_ROOT

##############################################
########### Android extra stuff ##############
##############################################

#NDKROOT=~/AndroidSDK/ndk
#export NDKROOT

##############################################
############ Emacs/Vim Config ################
##############################################

alias e="emacsclient -t"
alias ec="emacsclient -c"
alias vim="emacsclient -t"
alias vi="emacsclient -t"

##############################################
############# Eclipse Config #################
##############################################

export ECLIPSE_HOME=/usr/lib64/eclipse/

